{
  "name": "claudeoverseer",
  "version": "0.1.0",
  "description": "Monitor Claude Code background agents in real-time",
  "main": "./out/main/index.js",
  "author": "Darran Kelinske <darran@xalior.com>",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test tests/e2e",
    "test:watch": "vitest watch tests/unit",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run build && npm run test:e2e",
    "clean": "rm -rf release out",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac --config.dmg.writeUpdateInfo=false",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win --config.nsis.differentialPackage=false",
    "postdist": "npm run clean:extra",
    "clean:extra": "find release -name '*.blockmap' -delete && find release -name '*.yml' -delete && find release -name 'builder-*.y*ml' -delete && find release -type d \\( -name '*-unpacked' -o -name 'mac*' -o -name 'linux-*' -o -name 'win-*' -o -name '.icon-*' \\) -exec rm -rf {} + 2>/dev/null || true && echo 'ðŸ§¹ Cleaned up intermediate build files'"
  },
  "build": {
    "appId": "com.claudeoverseer.app",
    "productName": "ClaudeOverseer",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "out/**/*"
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "publish": null,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.developer-tools",
      "identity": null,
      "icon": "docs/icon.png",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Development",
      "icon": "docs/icon.png",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "signingHashAlgorithms": ["sha256"],
      "sign": null,
      "icon": "docs/icon.png",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "nsis": {
      "differentialPackage": false
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-bootstrap": "^2.10.0",
    "bootstrap": "^5.3.3",
    "zustand": "^5.0.0",
    "react-markdown": "^9.0.0",
    "remark-gfm": "^4.0.0",
    "rehype-highlight": "^7.0.0",
    "mermaid": "^11.0.0",
    "chokidar": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-vite": "^3.0.0",
    "electron-builder": "^25.0.0",
    "vite": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "typescript": "^5.7.0",
    "sass": "^1.80.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/node": "^22.0.0",
    "@playwright/test": "^1.48.0",
    "vitest": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0"
  }
}
